<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="config" xsi:type="array">
            <item name="template" xsi:type="string">ui/form/components/complex</item>
            <item name="sortOrder" xsi:type="number">10</item>
            <item name="label" xsi:type="string">Add new knowledge item</item>
            <item name="additionalClasses" xsi:type="string">sample-additional-class</item>
            <item name="text" xsi:type="string" translate="true"><![CDATA[
                <p>
                    Add new knowledge item???
                </p>
            ]]></item>
        </item>
    </argument>
    <dataSource name="tsum_add_knowledge_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Tsum\Knowledge\Model\AddKnowFormDataProvider</argument>
            <argument name="name" xsi:type="string">tsum_add_knowledge_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
    </dataSource>
    <field name="name"
           sortOrder="10"
           formElement="input">
        <settings>
            <dataType>text</dataType>
            <label translate="true">Name</label>
            <dataScope>data.name</dataScope>
        </settings>
    </field>
</container>